@model ProductRegistrationViewModel
@{
    ViewData["Title"] = "Add new product";
}


<div class="d-flex justify-content-center">
    <div class="create-product col-6">
        <form asp-action="AddProduct" method="post" novalidate>


            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" />
                <small><span asp-validation-for="Name" class="text-danger"></span></small>
            </div>
            <div class="mb-3">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <small><span asp-validation-for="Description" class="text-danger"></span></small>
            </div>
            <div class="mb-3">
                <label asp-for="Price" class="form-label"></label>
                <input asp-for="Price" class="form-control" />
                <small><span asp-validation-for="Price" class="text-danger"></span></small>
            </div>
            <div class="mb-3">
                <label asp-for="Rating" class="form-label"></label>
                <input asp-for="Rating" class="form-control" />
                <small><span asp-validation-for="Rating" class="text-danger"></span></small>
            </div>

            <button type="submit">Save</button>
        </form>
    </div>
</div>
